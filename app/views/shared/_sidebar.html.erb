<aside class="sidebar" data-layout-target="sidebar">
  <div class="sidebar-search">
    <input type="text"
           placeholder="Suchen..."
           data-layout-target="searchInput"
           data-action="keydown->layout#handleSearch" />
  </div>

  <div class="sidebar-section">
    <h4>Übersicht</h4>
    <ul class="sidebar-menu">
      <li>
        <%= link_to root_path,
                    class: ("active" if current_page?(root_path)),
                    data: { "layout-target" => "sidebarLink",
                            action: "click->layout#selectSidebarItem" } do %>
          <svg class="menu-icon" fill="currentColor" viewBox="0 0 24 24">
            <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
          </svg>
          Dashboard
        <% end %>
      </li>
      <li>
        <%= link_to "#analytics",
                    data: { "layout-target" => "sidebarLink",
                            action: "click->layout#selectSidebarItem" } do %>
          <svg class="menu-icon" fill="currentColor" viewBox="0 0 24 24">
            <path d="M16 6l2.29 2.29-4.88 4.88-4-4L2 16.59 3.41 18l6-6 4 4 6.3-6.29L22 12V6z"/>
          </svg>
          Analytics
        <% end %>
      </li>
      <li>
        <%= link_to "#reports",
                    data: { "layout-target" => "sidebarLink",
                            action: "click->layout#selectSidebarItem" } do %>
          <svg class="menu-icon" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
          </svg>
          Berichte
        <% end %>
      </li>
    </ul>
  </div>

  <div class="sidebar-section">
    <h4>Kunden & Vertrieb</h4>
    <ul class="sidebar-menu">
      <li>
        <%= link_to customers_path,
                    class: ("active" if controller_name == 'customers'),
                    data: { "layout-target" => "sidebarLink",
                            action: "click->layout#selectSidebarItem" } do %>
          <svg class="menu-icon" fill="currentColor" viewBox="0 0 24 24">
            <path d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63c-.34-1.02-1.3-1.74-2.46-1.74s-2.12.72-2.46 1.74L13.5 16H16v6h4z"/>
          </svg>
          Kundenverwaltung
        <% end %>
      </li>
      <li>
        <%= link_to "#orders",
                    data: { "layout-target" => "sidebarLink",
                            action: "click->layout#selectSidebarItem" } do %>
          <svg class="menu-icon" fill="currentColor" viewBox="0 0 24 24">
